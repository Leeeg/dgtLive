<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <RelativeLayout
        android:padding="@dimen/dp_0_6"
        android:background="@color/color_black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_alignParentRight="true"
            android:src="@drawable/personal_modification"
            android:id="@+id/personal_modification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.dgtis.live.imageVIew.CircleImageView
            android:id="@+id/personal_icon"
            android:layout_marginTop="25dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/personal_img"
            android:layout_width="90dp"
            android:layout_height="90dp" />

        <TextView
            android:layout_marginTop="@dimen/dp_8"
            android:id="@+id/personal_nick"
            android:textSize="@dimen/dp_0_6"
            android:textColor="@color/color_white"
            android:text="旅人舆猫"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/personal_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginBottom="@dimen/dp_0_6"
            android:textColor="@color/color_gray"
            android:text="账号： 12145325"
            android:layout_marginTop="@dimen/dp_4"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/personal_nick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <View
        android:layout_marginTop="@dimen/dp_0_6"
        android:background="@color/color_gray"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_6"/>

    <LinearLayout
        android:id="@+id/l_wallet"
        android:background="@color/color_white"
        android:padding="@dimen/dp_8"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50">

        <ImageView
            android:src="@drawable/personal_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginLeft="@dimen/dp_6"
            android:textColor="@color/color_black"
            android:text="@string/account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:scaleType="fitEnd"
            android:src="@drawable/personal_right"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <View
        android:layout_marginLeft="@dimen/dp_8"
        android:background="@color/color_gray"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_6"/>

    <LinearLayout
        android:background="@color/color_white"
        android:padding="@dimen/dp_8"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50">

        <ImageView
            android:src="@drawable/personal_contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginLeft="@dimen/dp_6"
            android:textColor="@color/color_black"
            android:text="@string/contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:scaleType="fitEnd"
            android:src="@drawable/personal_right"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <View
        android:layout_marginLeft="@dimen/dp_8"
        android:background="@color/color_gray"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_6"/>

    <LinearLayout
        android:background="@color/color_white"
        android:padding="@dimen/dp_8"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50">

        <ImageView
            android:src="@drawable/personal_cooperation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginLeft="@dimen/dp_6"
            android:textColor="@color/color_black"
            android:text="@string/cooperation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:scaleType="fitEnd"
            android:src="@drawable/personal_right"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <View
        android:background="@color/color_gray"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_6"/>

    <View
        android:layout_marginTop="@dimen/dp_60"
        android:background="@color/color_gray"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_6"/>

    <LinearLayout
        android:background="@color/color_white"
        android:padding="@dimen/dp_8"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50">

        <ImageView
            android:src="@drawable/personal_exit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginLeft="@dimen/dp_6"
            android:textColor="@color/color_black"
            android:text="@string/login_out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:scaleType="fitEnd"
            android:src="@drawable/personal_right"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <View
        android:background="@color/color_gray"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_6"/>

</LinearLayout>
